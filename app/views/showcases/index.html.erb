      <div class="item active slide-no-border" class="slide">
        <%= image_tag(@showcase.photo_artist, :class => "carousel-slide") %>
        <div class="carousel-elements">
          <!-- TITLE -->
          <div class="carousel-element-title">
            <div class="carousel-element-display">
              <div class="carousel-element-content-title">
                <h1 class="title-1 carousel-title-1"><%= @artist.first_name%> <%= @artist.last_name %></h1>
              </div>
              <div class="hide-block-title">
              </div>
            </div>
            <svg class="carousel-svg-title" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none">
              <polygon fill="white" points="0,0 0,100 100,100"/>
            </svg>
          </div>
          <!-- CATCH PHRASE -->
          <div class="carousel-elements-2">
            <div class="carousel-element">
              <div class="carousel-element-display">
                <div class="carousel-element-content">
                  <h4 class="title-3-medium"><%= @showcase.artist_description%></h4>
