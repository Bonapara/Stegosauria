<div class="main-container">
  <div class="gallery-container">
    <!-- Right column -->
    <div class="gallery-column-1">
      <!-- Photo Gallery -->
      <%= cl_image_tag @gallery.photo, crop: :fill, :class => "gallery-photo"%>
      <h2 class="title-2"> <%= @gallery.title_1 %> </h2>
        <p> <%= @gallery.description_1 %> </p>
      <h2 class="title-2"> <%= @gallery.title_2 %> </h2>
      <p> <%= @gallery.description_2 %> </p>
    </div>
    <!-- Left column -->
    <div class="gallery-column-2">
      <div class="gallery-infos">
        <h1 class="title-1"><%= @gallery.name %></h1>
        <div class="text-content">
          <i class="fas fa-map-marker-alt"></i> <%= @gallery.address %>
        </div>
        <div class="text-content">
          <i class="fas fa-clock"></i>
          <%= @gallery.opening_hours %>
        </div>
        <div class="text-content">
          <i class="fas fa-phone"></i> <%= @gallery.phone %>
        </div>
        <div class="text-content">
          <i class="fas fa-envelope"></i> <%= @gallery.email %>
        </div>
      </div>
      <div class="gallery-map">
        <iframe
          width="100%"
          height="200"
          frameborder="0" style="border:0"
          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDy7Ksnv9eMUGY_R_tHMd-kYPuqv2WeQmE
            &q=27+rue+guersant,Paris+France" allowfullscreen>
        </iframe>
        <%= link_to "Se rendre Ã  la galerie", "http://www.google.com", class: "button primary" %>
      </div>
    </div>
  </div>
</div>



