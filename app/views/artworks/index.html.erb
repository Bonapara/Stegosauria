<!-- Artists count -->
<div class="main-container">
  <div class="count">
    <%= @artworks.count %> oeuvres
  </div>
</div>
<!-- Artist cards container -->
<div class="columns-container">
  <!-- TODO passer les artists en locals dans une partial de artist_card -->
  <% @artworks.each do |artwork| %>
    <div class="column">
      <div class="artwork-card">
        <div class="artwork-img">
          <%= image_tag "artwork_2.png" %>
        </div>
        <div class="artwork-infos">
          <h2 class="artwork-artist">
            <%= artwork.artist.last_name %> <%= artwork.artist.first_name %>
          </h2>
          <%= link_to artwork_path(artwork) do %>
            <h2 class="artwork-name">
              <%= artwork.name %>
            </h2>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
 </div>
