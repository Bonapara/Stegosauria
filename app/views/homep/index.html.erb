<div class="container">
  <div id="myCarousel" class="carousel slide">
    <!-- INDICATORS -->
    <ol class="carousel-indicators">
      <li class = "active" data-slide-to="0" data-target="#myCarousel"></li>
      <li data-slide-to="1" data-target="#myCarousel"></li>
      <li data-slide-to="2" data-target="#myCarousel"></li>
      <li data-slide-to="3" data-target="#myCarousel"></li>
    </ol>
    <!-- Wrapper for slides -->

    <div class="carousel-inner">
      <!-- Artists call to action -->
      <div class="item active" class="slide">
        <%= image_tag @homeP.photo_slide1 %>
        <div class="carousel-card">
          <div class="image-title">
            <h4><%= @artist.first_name%> <%= @artist.last_name %></h4>
            <p> Peinture sur toile</p>
          </div>
          <div class="image-title">
            <%= link_to "aller voir", artist_path(@artist), class: 'button primary carousel-button'%>
          </div>
          <!-- <div class="call-to-action-all">
            <%= link_to 'artistes', artists_path, class: 'button primary carousel-button' %>
          </div> -->
        </div>
      </div>
      <!-- Artworks call to action -->
      <div class="item" class="slide">
        <%= image_tag @homeP.photo_slide2 %>
        <div class="carousel-card">
          <div class="image-title">
            <h4>Oeuvres</h4>
          </div>
          <div class="call-to-action-all">
            <%= link_to 'Je vais voir', artworks_path, class: 'button primary carousel-button' %>
          </div>
        </div>
      </div>
      <!-- Exposition call to action -->
      <div class="item" class="slide">
        <%= image_tag @homeP.photo_slide3 %>
        <div class="carousel-card">
          <div class="image-title">
            <h4>Expositions</h4>
          </div>
          <div class="call-to-action-all">
            <%= link_to 'Je vais voir', articles_path, class: 'button primary carousel-button' %>
          </div>
        </div>
      </div>
      <!-- Gallery call to action -->
      <div class="item" class="slide">
        <%= image_tag @homeP.photo_slide3 %>
        <div class="carousel-card">
          <div class="image-title">
            <h4>Galerie</h4>
          </div>
          <div class="call-to-action-all">
            <%= link_to 'Je vais voir', gallery_index_path, class: 'button primary carousel-button' %>
          </div>
        </div>
      </div>
    </div>
    <!-- Controls -->
    <!-- left side -->
    <!-- <a class="left carousel-control" data-slide="prev" href="#myCarousel"><span class="icon-prev"></span></a> -->
    <!-- right side -->
    <!-- <a class="right carousel-control" data-slide="next" href="#myCarousel"><span class="icon-next"></span></a> -->
  </div>
</div>
